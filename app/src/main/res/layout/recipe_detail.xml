<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  >
  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >
    <ImageView
      android:id="@+id/recipe_detail_photo_iv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:contentDescription="@string/recipe_photo_iv_content_description"
      android:scaleType="centerCrop"
      android:src="@drawable/recipe_photo"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      />
    <TextView
      android:id="@+id/recipe_detail_label_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/recipe_detail_photo_iv"
      app:layout_constraintLeft_toLeftOf="parent"
      android:textSize="32sp"
      android:textStyle="bold"
      android:textColor="@android:color/black"
      android:textAlignment="center"
      tools:text="Pineapple Chipotle Short Rib Sliders"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:textIsSelectable="true"
      />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:id="@+id/recipe_detail_cards_ly"
      >
      <androidx.cardview.widget.CardView
        android:id="@+id/recipe_detail_timer_card_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >
        <TextView
          android:id="@+id/recipe_detail_timer_time_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          android:textAlignment="center"
          android:textColor="@android:color/black"
          android:textSize="18sp"
          android:textStyle="bold"
          app:drawableStartCompat="@drawable/timer_icon"
          app:layout_constraintLeft_toRightOf="@+id/recipe_detail_timer_icon_iv"
          tools:text="3 min." />
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
        android:id="@+id/recipe_detail_ingredients_count_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/recipe_detail_calories_count_cv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >
        <TextView
          android:id="@+id/recipe_detail_ingredients_count_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          android:textAlignment="center"
          android:textColor="@android:color/black"
          android:textSize="18sp"
          android:textStyle="bold"
          app:layout_constraintLeft_toRightOf="@+id/recipe_detail_timer_icon_iv"
          app:drawableStartCompat="@drawable/ingredients_icon"
          tools:text="8 Ingredients" />
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
        android:id="@+id/recipe_detail_calories_count_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/recipe_detail_timer_card_cv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >
        <TextView
          android:id="@+id/recipe_detail_calories_count_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="8dp"
          android:textAlignment="center"
          android:textColor="@android:color/black"
          android:textSize="18sp"
          android:textStyle="bold"
          app:drawableStartCompat="@drawable/calories_icon"
          app:layout_constraintLeft_toRightOf="@+id/recipe_detail_timer_icon_iv"
          tools:text="250 KCal" />
      </androidx.cardview.widget.CardView>
    </LinearLayout>
  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="12dp"
    app:cardCornerRadius="8dp"
  >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/recipe_detail_ingredients_list_lly"
      android:orientation="vertical"
      >
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_detail_ingredients_list_title"
        android:layout_marginStart="4dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="12dp"
    app:cardCornerRadius="8dp"
    >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/recipe_detail_total_nutrients_lly"
      android:orientation="vertical"
      >
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_detail_total_nutrients_title"
        android:layout_marginStart="4dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
