<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinFinalProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="postSplashScreenTheme">@style/Theme.KotlinFinalProject</item>
    </style>

    <style name="KotlinFinalProject.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:windowSplashScreenBackground">@drawable/splash_screen</item> <!-- Define splash screen drawable -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen</item> <!-- Define splash screen drawable -->
        <item name="android:windowSplashScreenAnimationDuration">2000</item> <!-- Specify duration in milliseconds -->
        <item name="postSplashScreenTheme">@style/Theme.KotlinFinalProject</item>
    </style>

    <style name="Theme.KotlinFinalProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KotlinFinalProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KotlinFinalProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>